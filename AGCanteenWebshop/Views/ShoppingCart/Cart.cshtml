
@{
    ViewBag.Title = "Cart";
}

@using AGCanteenWebshop.Controllers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>
    <table class="table">

        <tr>
            <th>Name </th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub total</th>
        </tr>



        @foreach (Item item in (List<Item>)Session["cart"])
        {

            <tr>
                <td>@Html.ActionLink("Delete", "Delete", "ShoppingCart", new { id = item.Product.Fld_ProductID }, null)</td>
                <td>@item.Product.Fld_ProductName</td>
                <td>@item.Product.Fld_ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Fld_ProductPrice * item.Quantity)</td>
            </tr>
        }

        <tr>


        </tr>


    </table>
    @Html.ActionLink("Continue Shopping", "AllProduct", "Product")  |
    @Html.ActionLink("Checkout", "AllProduct", "Product")
</body>
</html>
